# Required
ANTHROPIC_API_KEY=sk-ant-...

# OpenFOAM (auto-detected from Docker, but can be overridden)
OPENFOAM_VERSION=11
OPENFOAM_DISTRIBUTION=foundation
OPENFOAM_CONTAINER=foampilot-openfoam

# Agent behavior
FOAMPILOT_MODEL=claude-sonnet-4-5-20250929
FOAMPILOT_MODEL_COMPLEX=claude-opus-4-5
FOAMPILOT_MAX_TURNS=100
FOAMPILOT_COMPACTION_THRESHOLD=0.70
FOAMPILOT_PERMISSION_MODE=standard

# Paths
FOAMPILOT_CASES_DIR=./cases
FOAMPILOT_INDEX_DIR=./src/foampilot/index/data
